<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_gravity="center"
        android:textSize="21sp" 
        android:text="@string/explain_goal" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center" 
        android:gravity="center_horizontal" >
    
    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center_horizontal" >

            <com.facebook.widget.ProfilePictureView
                android:id="@+id/profile_pic_friend_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                facebook:preset_size="normal" >
            </com.facebook.widget.ProfilePictureView>

                <TextView
                    android:id="@+id/user_name_friend_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:textColor="#333"
                    android:textSize="14sp" 
                    android:visibility="gone" />
        </LinearLayout>
        
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:textSize="22sp" 
            android:text="@string/or" />
        
          
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center_horizontal">
    
            <com.facebook.widget.ProfilePictureView
                android:id="@+id/profile_pic_friend_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:visibility="visible"
                facebook:preset_size="normal" >
            </com.facebook.widget.ProfilePictureView>
    
            <TextView
                android:id="@+id/user_name_friend_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:textColor="#333"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingCircle"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="gone" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal" 
        android:gravity="center_vertical" >
           
       <ProgressBar
           android:id="@+id/progressBar"
           style="@android:style/Widget.ProgressBar.Horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxHeight="15dp"
           android:minHeight="15dp"
           android:minWidth="180dp"
           android:maxWidth="180dp"
           android:layout_marginRight="15dp"
           android:max="10" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >
            <TextView
                 android:id="@+id/progressTextDynamic"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:textSize="16sp" 
                 android:text="@string/start_counter" />
            
             <TextView
                 android:id="@+id/progressTextStatic"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginRight="30dp"
                 android:textSize="16sp" 
                 android:text="@string/progress_text" />
         </LinearLayout>
         
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="right|center_vertical"
             android:textSize="16sp" 
             android:text="@string/advice" />
        
    </LinearLayout> 
</LinearLayout>